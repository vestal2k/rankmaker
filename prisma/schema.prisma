// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(cuid())
  username     String   @unique
  email        String   @unique
  passwordHash String
  imageUrl     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  sessions       Session[]
  tierlists      TierList[]
  comments       Comment[]
  votes          Vote[]
  savedTierLists SavedTierList[]
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model TierList {
  id            String   @id @default(cuid())
  title         String
  description   String?
  coverImageUrl String?
  isPublic      Boolean  @default(true)
  userId        String?
  user          User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  anonymousId   String?  // For anonymous users (stored in localStorage)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  tiers          Tier[]
  comments       Comment[]
  votes          Vote[]
  savedBy        SavedTierList[]

  @@index([userId])
  @@index([anonymousId])
  @@index([createdAt])
}

model Tier {
  id         String     @id @default(cuid())
  name       String
  color      String     @default("#808080")
  order      Int
  tierListId String
  tierList   TierList   @relation(fields: [tierListId], references: [id], onDelete: Cascade)
  items      TierItem[]

  @@index([tierListId])
}

enum MediaType {
  IMAGE
  VIDEO
  AUDIO
  GIF
  YOUTUBE
  TWITTER
  INSTAGRAM
}

model TierItem {
  id            String    @id @default(cuid())
  mediaUrl      String
  mediaType     MediaType @default(IMAGE)
  coverImageUrl String?   // Cover image for audio items
  embedId       String?   // ID for embeds (YouTube videoId, Tweet ID, Instagram post ID)
  label         String?
  order         Int
  tierId        String
  tier          Tier      @relation(fields: [tierId], references: [id], onDelete: Cascade)

  @@index([tierId])
}

model Comment {
  id         String   @id @default(cuid())
  content    String
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tierListId String
  tierList   TierList @relation(fields: [tierListId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([tierListId])
  @@index([userId])
}

model Vote {
  id          String   @id @default(cuid())
  value       Int      // 1 for upvote, -1 for downvote
  userId      String?
  user        User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  anonymousId String?  // For anonymous votes (stored in localStorage)
  tierListId  String
  tierList    TierList @relation(fields: [tierListId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, tierListId])
  @@unique([anonymousId, tierListId])
  @@index([tierListId])
  @@index([userId])
  @@index([anonymousId])
}

model SavedTierList {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tierListId String
  tierList   TierList @relation(fields: [tierListId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())

  @@unique([userId, tierListId])
  @@index([tierListId])
  @@index([userId])
}
